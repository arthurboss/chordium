{
  "name": "chordium-monorepo",
  "description": "A modern, minimalist chord viewer for beginner guitarists and hobbyists. View guitar chords without visual distractions.",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "frontend",
    "backend",
    "packages/types",
    "packages/e2e-tests"
  ],
  "scripts": {
    "use-workspace": "node scripts/toggle-workspace-deps.js",
    "use-npm": "USE_NPM=true node scripts/toggle-workspace-deps.js",
    "dev": "turbo run dev",
    "dev:fe": "turbo run dev --filter=chordium-frontend",
    "dev:be": "turbo run dev --filter=chordium-backend",
    "build": "turbo run build && cd frontend && npm run prerender",
    "build:types": "turbo run build --filter=@chordium/types",
    "build:fe": "turbo run build --filter=chordium-frontend",
    "build:be": "turbo run build --filter=chordium-backend",
    "test": "turbo run test",
    "test:fe": "turbo run test --filter=chordium-frontend",
    "test:be": "turbo run test --filter=chordium-backend",
    "test:watch": "turbo run test:watch",
    "test:fe:watch": "turbo run test:watch --filter=chordium-frontend",
    "test:be:watch": "turbo run test:watch --filter=chordium-backend",
    "lint": "turbo run lint",
    "lint:fe": "turbo run lint --filter=chordium-frontend",
    "lint:be": "turbo run lint --filter=chordium-backend",
    "lint:fix": "turbo run lint:fix",
    "lint:fe:fix": "turbo run lint:fix --filter=chordium-frontend",
    "lint:be:fix": "turbo run lint:fix --filter=chordium-backend",
    "test:e2e": "turbo run test --filter=@chordium/e2e-tests",
    "test:e2e:open": "turbo run test:open --filter=@chordium/e2e-tests",
    "test:e2e:headed": "turbo run test:headed --filter=@chordium/e2e-tests",
    "test:e2e:dev": "turbo run test:dev --filter=@chordium/e2e-tests",
    "clean": "turbo clean && rm -rf node_modules frontend/node_modules backend/node_modules packages/types/node_modules packages/e2e-tests/node_modules",
    "clean:install": "npm run clean && npm install",
    "kill": "./scripts/kill-servers.sh",
    "kill:fe": "./scripts/kill-servers.sh fe",
    "kill:be": "./scripts/kill-servers.sh be",
    "check:fixtures": "bash scripts/check-no-duplicate-chord-sheet-fixtures.sh",
    "start": "turbo run build && turbo run start --filter=chordium-backend & turbo run preview --filter=chordium-frontend",
    "start:fe": "turbo run preview --filter=chordium-frontend",
    "start:be": "turbo run start --filter=chordium-backend"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.0.14",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "puppeteer": "^24.16.1"
  }
}