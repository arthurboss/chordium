{
  "name": "chordium-backend",
  "version": "1.0.0",
  "main": "dist/backend/server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prestart": "npx puppeteer browsers install chrome",
    "start": "node dist/backend/server.js",
    "dev": "tsx server.ts",
    "dev:watch": "nodemon",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' npx jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage",
    "lint": "npx eslint . --ext .js,.ts",
    "lint:fix": "npx eslint . --ext .js,.ts --fix",
    "lint:ts": "tsc --noEmit",
    "test:s3-config": "NODE_OPTIONS='--experimental-vm-modules' npx jest tests/services/s3/configuration.test.js --verbose"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "utils/**/*.js",
      "utils/**/*.ts",
      "services/**/*.js",
      "services/**/*.ts",
      "controllers/**/*.js",
      "controllers/**/*.ts",
      "!node_modules/**"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@supabase/supabase-js": "^2.49.7",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "puppeteer": "^24.8.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^29.7.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
